{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",

    /* Output */
    "rootDir": "src",
    "outDir": "dist",

    /* Safety */
    "strict": true,
    "noImplicitAny": true,

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Build */
    "skipLibCheck": true
  },

  "include": ["src"]
}
